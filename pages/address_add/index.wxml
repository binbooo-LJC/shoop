<!--pages/address_add/index.wxml-->
<view class="container">
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class="name main">
      <view class="item">
        <view class="labelname label">联系人</view>
        <view class="labelinput">
          <input placeholder='姓名'></input>
        </view>
      </view>
      <view class="item">
        <view class="labelname label">手机号码</view>
        <view class="labelinput">
          <input type="number" placeholder='11位手机号' maxlength='11'></input>
        </view>
      </view>
      <view class="item">
        <view class="labelname label">选择地区</view>
        <view class="labelinput">
        
         <picker class="pick_pro" bindchange='bindPro' range='{{proData}}'>
            <view class="picker_pro hui">{{SelectPro}}</view>
         </picker>
         <picker class="pick_pro" bindchange='bindCity' range='{{cityData}}'>
            <view class="picker_pro hui">{{SelectCity}}</view>
         </picker>
         <picker class="pick_pro" bindchange='bindDis' range='{{disData}}'>
            <view class="picker_pro hui">{{SelectDis}}</view>
         </picker>
        </view>
      </view>
      <view class="item">
        <view class="labelname label">详细地址</view>
        <view class="labelinput">
          <input placeholder='街道门牌信息'></input>
        </view>
      </view>
      <view class="item">
        <view class="labelname label">邮政编号</view>
        <view class="labelinput">
          <input></input>
        </view>
      </view>
    </view>
    <button class="save" formType="submit">
      保存
    </button>
    <button class="serchForwx" type="primary">
      充微信中读取
    </button>
    <button class="cancal" formType="reset">
      取消
    </button>
  </form>
</view>